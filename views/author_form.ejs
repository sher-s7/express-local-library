<%- layout('layout') -%>
<h1><%= title %> </h1>

<form action=""
      method="POST">
    <div class="form-group">
        <label for="first_name">First Name:</label>
        <input type="text"
               id="first_name"
               class="form-control"
               placeholder="John"
               name="first_name"
               value="<%= typeof author === 'undefined' ? '' : author.first_name %>"
               required>
        <label for="family_name">First Name:</label>
        <input type="text"
               id="family_name"
               class="form-control"
               placeholder="Doe"
               name="family_name"
               value="<%= typeof author === 'undefined' ? '' : author.family_name %>"
               required>
    </div>
    <div class="form-group">
        <label for="date_of_birth">Date of birth:</label>
        <input type="date"
               name="date_of_birth"
               id="date_of_birth"
               class="form-control"
               value="<%= typeof author === 'undefined' ? '' : author.date_of_birth %>">
    </div>
    <div class="form-group">
        <label for="date_of_death">Date of death:</label>
        <input type="date"
               name="date_of_death"
               id="date_of_death"
               class="form-control"
               value="<%= typeof author === 'undefined' ? '' : author.date_of_death %>">
    </div>
    <button class="btn btn-primary"
            type="submit">Submit</button>
</form>
<% if (typeof errors !== 'undefined') { %>
<ul>
    <% errors.forEach(error => { %>
    <li><%= error.msg %> </li>
    <% }) %>
</ul>
<% } %>